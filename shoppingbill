#shopping bill with discounts
print("---DMART SHOPPING")
input("Enter Customer Name:")
cost=float(input("Enter price of the product:"))
quantity=float(input("Enter quantity:"))
amount=cost*quantity
gst=12*amount/100
total=amount+gst
print("Amount is:",amount)
print("GST is:",gst)
print("Total is:",total)
if total<1000:
    discount=0
elif total<3000:
    discount=0.1*total
else:
    discount=0.2*total
print("Amount to be paid:",total-discount)

